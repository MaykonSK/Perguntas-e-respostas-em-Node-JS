<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a class="btn btn-primary" href="/perguntar">Perguntar</a>
        <br>
        <% perguntas.forEach(perguntas =>{ %>
            <br>
            <div class="card">
                <div class="card-body">
                    <% data = new Date(perguntas.createdAt); %>
                    <% dataFormatada = data.toLocaleDateString('pt-BR', {timeZone: 'UTC'}); %>
                    <% hora = data.getHours(); %>
                    <% minuto = data.getMinutes(); %>
                    <p><%= dataFormatada %> <%= hora %>:<%= minuto %></p>
                    <h3><%= perguntas.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= perguntas.id %>"><button class="btn btn-success">Responder</button></a>
                </div>
            </div>
        <% }) %>
    </div>
    <br>
<%- include('partials/footer.ejs') %>
